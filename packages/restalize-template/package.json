{
  "name": "restalize-template",
  "version": "1.0.7",
  "description": "Sample restalize api",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:kennasoft/restalize.git"
  },
  "files": [
    "./"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist/",
    "build": "tsc",
    "dev": "nodemon ./server/server.ts",
    "dev:hapi": "nodemon ./server/server.hapi.ts",
    "start": "node ./dist/server.js",
    "test": "jest --runInBand",
    "test:watch": "yarn test --watch",
    "deploy": "yarn build && npm publish",
    "version:patch": "yarn version --patch --no-git-tag-version",
    "version:minor": "yarn version --minor --no-git-tag-version",
    "version:major": "yarn version --major --no-git-tag-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "@hapi/inert": "^6.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "lodash.pick": "^4.4.0",
    "moment": "^2.25.3",
    "mysql": "^2.18.1",
    "pluralize": "^8.0.0",
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/hapi__hapi": "^19.0.3",
    "@types/jest": "^26.0.0",
    "@types/lodash.pick": "^4.4.6",
    "@types/pluralize": "^0.0.29",
    "doctoc": "^1.4.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "sqlite3": "^4.2.0",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  }
}
